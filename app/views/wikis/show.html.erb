<h1><%= @wiki.title %></h1>
  <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-success' %>
  <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', \
 data: { confirm: 'Are you sure you want to delete this topic?'} %>


<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @wiki.body %></p>
    <small>
      created <%= time_ago_in_words(@wiki.created_at) %>
    </small>
    <br/>
    <% if current_user.premium? || current_user.admin? && @wiki.private %>
      <%= link_to 'Public wiki' , public_path(@wiki), class: 'btn btn-danger', \
    data: { confirm: 'Are you sure? You are about to public wiki.' } %>
    <% elsif current_user.premium? || current_user.admin? && !@wiki.private %>
      <%= link_to 'Private wiki' , private_path(@wiki), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

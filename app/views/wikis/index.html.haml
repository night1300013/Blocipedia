%h1 Wikis
.row
  .col-md-8
    - @wikis.each do |wiki|
      .media
        .media-body
          %h4.media-heading
            = link_to markdown(wiki.title), wiki
            %span.pull-right.border.border-dark
              = "PRIVATE" if wiki.private
          %small
            = markdown(wiki.body)

  .col-md-4
    = link_to "New Wiki", new_wiki_path, class: 'btn btn-success'
